{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "voxelcraft.ai/schemas/welcome.schema.json",
  "type": "object",
  "required": ["type", "protocol_version", "agent_id", "resume_token", "world_params", "catalogs"],
  "properties": {
    "type": {"const": "WELCOME"},
    "protocol_version": {"const": "1.0"},
    "agent_id": {"type": "string"},
    "resume_token": {"type": "string"},
    "world_params": {
      "type": "object",
      "required": ["tick_rate_hz", "chunk_size", "height", "obs_radius", "day_ticks", "seed"],
      "properties": {
        "tick_rate_hz": {"type": "integer", "minimum": 1},
        "chunk_size": {
          "type": "array",
          "minItems": 3,
          "maxItems": 3,
          "items": {"type": "integer", "minimum": 1}
        },
        "height": {"type": "integer", "minimum": 1},
        "obs_radius": {"type": "integer", "minimum": 1},
        "day_ticks": {"type": "integer", "minimum": 1},
        "seed": {"type": "integer"}
      },
      "additionalProperties": false
    },
    "catalogs": {
      "type": "object",
      "required": ["block_palette", "item_palette", "recipes_digest", "blueprints_digest", "law_templates_digest", "events_digest"],
      "properties": {
        "block_palette": {
          "type": "object",
          "required": ["digest", "count"],
          "properties": {
            "digest": {"type": "string"},
            "count": {"type": "integer", "minimum": 1}
          },
          "additionalProperties": false
        },
        "item_palette": {
          "type": "object",
          "required": ["digest", "count"],
          "properties": {
            "digest": {"type": "string"},
            "count": {"type": "integer", "minimum": 1}
          },
          "additionalProperties": false
        },
        "recipes_digest": {"type": "string"},
        "blueprints_digest": {"type": "string"},
        "law_templates_digest": {"type": "string"},
        "events_digest": {"type": "string"},
        "tuning_digest": {"type": "string"}
      },
      "additionalProperties": false
    },
    "current_world_id": {"type": "string"},
    "world_manifest": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["world_id"],
        "properties": {
          "world_id": {"type": "string"},
          "world_type": {"type": "string"},
          "entry_point_id": {"type": "string"},
          "requires_permit": {"type": "boolean"},
          "switch_cooldown_ticks": {"type": "integer", "minimum": 0},
          "reset_every_ticks": {"type": "integer", "minimum": 0},
          "reset_notice_ticks": {"type": "integer", "minimum": 0}
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
